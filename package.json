{
  "name": "eyo-kernel",
  "description": "Restoring the letter «ё» (yo) in russian texts",
  "version": "4.0.0",
  "author": {
    "name": "Denis Seleznev",
    "email": "hcodes@yandex.ru",
    "url": "https://github.com/e2yo/eyo-kernel"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./load": {
      "types": "./dist/loadDictionary.d.ts",
      "default": "./dist/loadDictionary.js"
    }
  },
  "typings": "./dist/index.d.ts",
  "homepage": "https://github.com/e2yo/eyo-kernel",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/e2yo/eyo-kernel.git"
  },
  "keywords": [
    "e",
    "yo",
    "yoficator",
    "ё",
    "е",
    "ёфикатор",
    "ёфикация"
  ],
  "engines": {
    "node": ">= 18"
  },
  "files": [
    "dictionary",
    "dist",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "ts-jest": "^29.4.4",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "scripts": {
    "test": "npm run eslint && npm run jest",
    "jest": "NODE_OPTIONS=--experimental-vm-modules jest ./test",
    "eslint": "eslint .",
    "create:dicts": "node ./tools/createDictionaries.mjs",
    "build": "npm run create:dicts && tsc",
    "unit-test": "jest ./test",
    "prepare": "npm run build"
  }
